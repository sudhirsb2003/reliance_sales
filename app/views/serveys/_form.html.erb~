<script>

$(document).ready(function () {
    $(".text").hide();
    $("#servey_type_of_residence_classbtn_valueothers_onclickgetresults").click(function () {
        $(".text").show();
    });
    $("#servey_type_of_residence_classbtn_idr2_valuehostel").click(function () {
        $(".text").hide();
    });

    $(".occupation").hide();
    $("#servey_vehicle_owned_classbtn_valueothers_onclickgetresults").click(function () {
        $(".occupation").show();
    });
    $("#servey_vehicle_owned_classbtn_valuesr_exec").click(function () {
        $(".occupation").hide();
    });
});
</script>


